<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Checkout.Menudetail">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="-5dp"
        android:layout_marginTop="-15dp"
        tools:ignore="MissingConstraints">
        <TextView
            android:id="@+id/buttonHapus"
            android:layout_marginTop="5dp"
            android:layout_width="36dp"
            android:layout_height="35dp"
            android:layout_marginBottom="-30dp"
            android:background="@drawable/shape"
            android:elevation="10dp"
            android:layout_marginLeft="365dp"
            android:layout_marginRight="-402dp"
            android:fontFamily="@font/poppins"
            android:gravity="center"
            android:text="x"
            android:textColor="#F24E1E"
            android:textSize="15dp"
            android:textStyle="bold"
            tools:ignore="MissingConstraints" />
        <androidx.cardview.widget.CardView
            android:id="@+id/meuMazda2"
            android:layout_width="390dp"
            android:layout_height="140dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="2dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="5dp"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_marginLeft="-9dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="15dp">
            <TextView
                android:id="@+id/namaMinumanTextView"
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="100dp"

                android:fontFamily="@font/poppins_medium"
                android:text="Nama Minuman goes here"
                android:textColor="#000000"
                android:textSize="15dp"
                android:textStyle="bold"
                tools:ignore="TextSizeCheck" />


                <TextView
                    android:id="@+id/hargaAwalTextView"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="100dp"
                    android:fontFamily="@font/poppins_medium"
                    android:text="Rp."
                    android:textColor="#74FF0000"
                    android:textSize="13dp"
                    android:textStyle="bold"
                    tools:ignore="TextSizeCheck" />


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/itemImage"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="5dp"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:src="@drawable/straw"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="80dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/result"
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="100dp"
                    android:fontFamily="@font/poppins"
                    android:text="Harga Akhir"
                    android:textColor="@color/black"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    tools:ignore="TextSizeCheck" />

                <TextView
                    android:id="@+id/buttonMinus"
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:layout_marginStart="26dp"
                    android:layout_marginEnd="1dp"
                    android:background="@drawable/background_white"
                    android:fontFamily="@font/poppins"
                    android:gravity="center"
                    android:shadowColor="@color/black"
                    android:text=" -"
                    android:paddingLeft="-2dp"
                    android:paddingTop="2dp"
                    android:textColor="#8B000000"
                    android:textSize="14dp"
                    android:textStyle="bold"
                    tools:ignore="TextSizeCheck" />

                <TextView
                    android:id="@+id/quantityTextView"
                    android:layout_width="20dp"
                    android:layout_height="25dp"
                    android:layout_marginStart="6dp"
                    android:fontFamily="@font/poppins"
                    android:gravity="center"
                    android:shadowColor="@color/black"
                    android:text="0"
                    android:textColor="#F7000000"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    tools:ignore="TextSizeCheck" />

                <TextView
                    android:id="@+id/buttonPlus"
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="1dp"
                    android:background="@drawable/background_white"
                    android:fontFamily="@font/poppins"
                    android:gravity="center"
                    android:shadowColor="@color/black"
                    android:text=" +"
                    android:paddingLeft="-3dp"
                    android:paddingTop="2dp"
                    android:textColor="#8B000000"
                    android:textSize="14dp"
                    android:textStyle="bold"
                    tools:ignore="TextSizeCheck" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>